generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int                   @id @default(autoincrement())
  name          String?
  email         String                @unique
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  events        Event[]
  collaborators Collaborator[]
  notifications Notification[]
  messages      ChatMessage[]
  reactions     MessageReaction[]
  participants  ChatRoomParticipant[]
  createdAt     DateTime              @default(now())
}

model Account {
  id                 Int     @id @default(autoincrement())
  userId             Int
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  location    String?
  priority    Priority @default(MEDIUM)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  notifyBefore Int? // Minutes before event to notify
  recurrenceId Int?        @unique
  recurrence   Recurrence? @relation(fields: [recurrenceId], references: [id], onDelete: Cascade)

  creatorId Int
  creator   User @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  collaborators Collaborator[]
  notifications Notification[]
  chatroom      ChatRoom[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Recurrence {
  id         Int       @id @default(autoincrement())
  frequency  Frequency
  interval   Int       @default(1)
  byWeekdays Json?
  count      Int?
  until      DateTime?
  event      Event?
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  color     String   @default("#4CAF50")
  events    Event[]
  createdAt DateTime @default(now())
}

model Collaborator {
  id      Int    @id @default(autoincrement())
  eventId Int
  userId  Int
  role    String @default("editor")

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
}

enum NotificationType {
  EVENT_REMINDER
  COLLABORATOR_ADDED
  COLLABORATOR_REMOVED
  EVENT_UPDATED
  EVENT_DELETED
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  eventId   Int
  type      String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model ChatRoom {
  id          Int      @id @default(autoincrement())
  eventId     Int      @unique // One chat room per event
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  event        Event                 @relation(fields: [eventId], references: [id], onDelete: Cascade)
  messages     ChatMessage[]
  participants ChatRoomParticipant[]
}

model ChatRoomParticipant {
  id         Int      @id @default(autoincrement())
  chatRoomId Int
  userId     Int
  joinedAt   DateTime @default(now())
  role       String   @default("member") // "admin" (creator), "member"
  isMuted    Boolean  @default(false)

  chatRoom ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chatRoomId, userId])
}

model ChatMessage {
  id          Int      @id @default(autoincrement())
  chatRoomId  Int
  userId      Int
  content     String
  messageType String   @default("text") // "text", "file", "link", "system"
  fileUrl     String? // For file messages
  fileName    String? // Original filename
  fileSize    Int? // In bytes
  metadata    Json? // { width, height, duration } for media
  isEdited    Boolean  @default(false)
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  chatRoom  ChatRoom          @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  reactions MessageReaction[]
  replies   ChatMessage?      @relation("MessageReplies", fields: [replyToId], references: [id])
  replyToId Int?
  repliesTo ChatMessage[]     @relation("MessageReplies")
}

model MessageReaction {
  id        Int      @id @default(autoincrement())
  messageId Int
  userId    Int
  emoji     String // e.g., "üëç", "‚ù§Ô∏è", "üòÇ"
  createdAt DateTime @default(now())

  message ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
}
